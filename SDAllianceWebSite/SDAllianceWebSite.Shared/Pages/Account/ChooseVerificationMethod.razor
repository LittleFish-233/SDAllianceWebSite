@page "/account/ChooseVerificationMethod/{*returnURL}"

@inject HttpClient Http
@inject ExamineService _examineService
@inject ILocalStorageService _localStorage
@inject ToastService? ToastService
@inject IAppHelper _appHelper
@inject NavigationManager NavigationManager
@inject IAuthService AuthService

@inject IJSRuntime JS

<Title Text="SDAlliance_软萌"></Title>


<div class="rounded  rounded shadow  bg-opacity  p-3">
    <h3 class="mb-3 text-center">请选择一种方式验证身份</h3>
    <p class="mb-4 text-center">根据国家法律法规，在登入之前我们必须验证你的真实身份，你可以选择下方任一一种方式进行验证</p>
    <div class="row">
        <div class="form-group col-12">
            <Button Color="Color.Primary"  style="width:100%" Text=" 手机号码" IsOutline="true" Icon="fa fa-phone" Size="Size.None" @onclick="OnClickPhone"></Button>
        </div>
        <div class="form-group col-12">
            <Button Color="Color.Primary"  style="width:100%" Text=" 微信（未实现）" IsOutline="false" Icon="fa fa-wechat" IsDisabled="true" Size="Size.None"></Button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string returnURL { get; set; }
    public void OnClickPhone()
    {
        NavigationManager.NavigateTo("/account/addphonenumber/"+returnURL);
    }
}
