<li  class="nav-item col-3 col-lg-2 col-xl-1 p-0" style=" display: flex; justify-content: center;" role="presentation">
    <a class="text-center pt-2 pb-2 rounded  tab-color" style="cursor:pointer;width:100%"
        id="@("pills"+RandomIndex+"-"+Index.ToString()+"-tab")" data-bs-toggle="pill" href="@("#pills"+RandomIndex+"-"+Index.ToString())" role="tab"  aria-controls="@("pills"+RandomIndex+"-"+Index.ToString())" aria-selected="@(IsSelected.ToString())"
        @onclick="@(()=>OnTabClick.InvokeAsync(Index))">
        <i class="@("fa fa-fw fa-lg  li-user-space-small-icon "+Icon)"></i>
        <div class="li-user-space-small-text">@Text</div>
    </a>
</li>

@code {
    [Parameter]
    public EventCallback<int> OnTabClick { get; set; }

    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public int Index { get; set; }
    [Parameter]
    public bool IsSelected { get; set; }

    [Parameter]
    public int RandomIndex { get; set; }

}
