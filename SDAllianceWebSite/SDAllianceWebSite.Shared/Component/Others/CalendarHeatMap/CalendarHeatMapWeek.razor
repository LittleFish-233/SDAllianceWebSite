
@foreach (var item in Model)
{
    <CalendarHeatMapDay Leve="@(item.Value<0?"x":((int)( (item.Value / CountLeve)<1?(item.Value==0?0:1): (item.Value / CountLeve))).ToString())" Title="@(item.Key.ToString("yyyy年M月d日")+(ShowTip?( " "+item.Value+"次"):""))"></CalendarHeatMapDay>
}

@code {
    [Parameter]
    public List<KeyValuePair<DateTime, int>> Model { get; set; }
    [Parameter]
    public DateTime Begin { get; set; }
    [Parameter]
    public DateTime End { get; set; }
    [Parameter]
    public double CountLeve { get; set; }
    [Parameter]
    public bool ShowTip { get; set; } = true;

}
